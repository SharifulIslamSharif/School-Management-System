@model PagedList.IPagedList<School_Management_System.Models.Studenttblvm>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h3>Student Information</h3>
<hr />
@Html.ActionLink("Add new", "Create", "StudentViewModel", htmlAttributes: new { @class = "btn", @role = "button" })

@using (Html.BeginForm("Index", "StudentViewModel", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
}
<div>
    <table border="1">
        <tr>
            <th>
                @Html.ActionLink("Student Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>Address</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Date of Birth</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Contact</td>
                <td>@Convert.ToString(String.Format("{0:MM/dd/yyyy}", item.StudentDOB))</td>
                <td><img src="@Url.Content(item.ImageUrl)" height="70" width="65" /></td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, htmlAttributes: new { @class = "btn-small blue", @role = "button" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "StudentViewModel", new { id = item.StudentId }, htmlAttributes: new { @class = "btn-small red", @role = "button" })</td>
            </tr>
        }
    </table>
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

