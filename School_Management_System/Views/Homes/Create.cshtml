@model School_Management_System.ViewModel.VmBookDepartment
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Add Book</h4>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using (Html.BeginForm("Create", "Homes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            Department:
            <input list="Department" name="DepartmentName" id="DepartmentName" required autocomplete="off">
            <datalist id="Department">
                @foreach (var item in Model.DepartmentList)
                {
                    <option value="@item.DepartmentName" />
                }
            </datalist>
        </div>
        <div class="form-group">
            <div id="ProData" class="Table">
                <div id="RowData" class="Row">
                    <input type="text" name="Rool" placeholder="Student Rool" />
                    <input type="text" name="BooktName" placeholder="Book Name" />
                    <input type="text" name="Quantity" placeholder="Quantity" />
                    <input type="date" name="ExpireDate" placeholder="Issue Date" />
                    <input type="file" name="imgFile" placeholder="Image" />
                    <a id="addRow" href="#" class="btn-small cyan"><i>Add More</i></a><hr />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn green">
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>

    $('#addRow').on('click', function () {
        $('#ProData').append('<div id="RowData" class="Row"><input type="text" name="BooktName" placeholder="Book Name" /><input type="text" name="Quantity" placeholder="Quantity" /><input type="text" name="Rool" placeholder="Price " /><input type="date" name="ExpireDate" placeholder="Date" /><input type="file" name="imgFile" placeholder="Image" /><a id="deleteRow" href="#" class="btn-small red"><i>Remove</i></a><hr /></div>');
        $('#ProData').addClass();
        return false; 
    });
    $('#ProData').on('click', '#deleteRow', function () {
        $(this).parent().remove();
        return false; 
    });
</script>
