<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET MVC Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/materialize.css" rel="stylesheet" />
    <link href="~/Content/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <nav class="nav-extended">

        <div class="nav-wrapper" style="background-color:darkcyan">
            <a href="#!" class="brand-logo left">School Management System Application</a>
            <ul class="right hide-on-med-and-down">
                <li>
                    @Html.ActionLink("View Model Crud", "Index", "StudentViewModel", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Ajax Crud", "Index", "AjaxCrud", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Multi Data Crud", "Index", "Homes", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li>
                    @Html.ActionLink("Model Crud", "Index", "Departments", new { area = "" }, new { @class = "navbar-brand" })
                </li>
            </ul>
        </div>
        <div class="mdi-navigation-close" style="background-color:darkcyan">
            <ul class="nav-wrapper">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Assign Role", "CreateRole", "Admin")</li>
                        <li>@Html.ActionLink("Mange Role", "Index", "Admin")</li>
                    }
                    <li>@Html.ActionLink("Hello, " + User.Identity.Name, "")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                }
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()

    </div>
    <hr />
    <footer class="page-footer" style="background-color:darkcyan">
        <div class="container" style="text-align: center; padding-bottom: 2px">
            © 2020 Copyright created By: Md. Shariful Islam &nbsp;&nbsp;||&nbsp;&nbsp;Email: sharifulislam2302963@gmail.com <br />
        </div>
        <div style="color:darkcyan">.</div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script src="~/Content/js/materialize.js"></script>
    <script src="~/Content/js/materialize.min.js"></script>
</body>
</html>
